Fuente1           = 'Lato', sans-serif
Fuente2           = 'Oswald', sans-serif
color-primario    = #333
color-secundario  = #8841DA
color-claro       = #fff

contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro
  box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.2)

opacidad(color, opacidad)
  alpha(color,opacidad)

for header in 3 2 1
  h{header}
    font-size: 35px - (5*header)
    margin: 0

titulos(fuente)
  if fuente == Fuente1
    font-family: Fuente1
  else
    font-family: Fuente2
    font-weight: 600
    text-transform: uppercase
* 
  box-sizing: border-box
  
body 
  margin: 0
  padding: 0
  color : color-primario
  titulos(Fuente1)
